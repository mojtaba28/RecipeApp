<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--TextInputLayout-->
    <style name="TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">?colorPrimary</item>
        <item name="boxStrokeWidth">@dimen/_1mdp</item>
        <item name="boxCornerRadiusTopStart">@dimen/_5mdp</item>
        <item name="boxCornerRadiusTopEnd">@dimen/_5mdp</item>
        <item name="boxCornerRadiusBottomStart">@dimen/_5mdp</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/_5mdp</item>
        <item name="android:layout_marginTop">@dimen/_10mdp</item>
        <item name="android:textColor">?colorPrimary</item>
        <item name="boxStrokeErrorColor">@color/tart_orange</item>
        <item name="startIconTint">?colorPrimary</item>
        <item name="hintTextColor">@color/moonstoneBlue</item>
    </style>
    <!--Dark green material button-->
    <style name="MaterialButton">
        <item name="backgroundTint">?colorPrimary</item>
        <item name="cornerRadius">@dimen/_10mdp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:textSize">@dimen/_10mdp</item>
    </style>

    <style name="MenuChip" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">@color/item_chip_background</item>
    </style>

</resources>